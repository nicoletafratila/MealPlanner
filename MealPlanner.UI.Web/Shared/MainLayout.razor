@using MealPlanner.UI.Web.Services;
@inherits LayoutComponentBase
@implements IErrorComponent

<PageTitle>Meal planner</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <div class="content px-4">
            @if (IsErrorActive)
            {
                <div class="alert alert-danger alert-dismissible" style="padding-right: 16px;" role="alert">
                    <div class="row">
                        <div class="col">
                            <h3>@Title</h3>
                        </div>
                        <div class="col-auto">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close" @onclick="HideError">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <p>@Message</p>
                    </div>
                </div>
            }
            <CascadingValue Value="this" Name="ErrorComponent">
                @Body
            </CascadingValue>
        </div>
    </main>
</div>
