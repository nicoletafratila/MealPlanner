@typeparam TItem

<table class="table table-sm table-striped table-hover caption-top">
    <caption>@TableCaption</caption>
    <thead>
        <tr>
            @if (ShowIndex)
            {
                <th>#</th>
            }
            @TableHeader
        </tr>
    </thead>
    <tbody>
        @if (@Items == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            var index = 1;
            @foreach (var item in Items)
            {
                <tr>
                    @if (ShowIndex)
                    {
                        <td>@index</td>
                    }
                    @RowTemplate(item)
                </tr>
                index++;
            }
        }
    </tbody>
</table>
