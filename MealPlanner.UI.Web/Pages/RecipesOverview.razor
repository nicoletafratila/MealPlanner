@page "/recipesoverview"

<PageTitle>Recipes book</PageTitle>

<h1>Recipes</h1>

@if (Recipes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Recipes)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Name</td>
                    <td>
                        <img src="@item.ImageUrl" width="100" height="80" />
                    </td>
                    <td>
                        <a href="@($"recipeedit/{item.Id}")" class="btn btn-primary table-btn">
                            <i class="fas fa-edit">Edit</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@($"recipeedit")" class="btn btn-primary table-btn">
        <i class="fas fa-new">New</i>
    </a>
}
