@page "/shopsoverview"

<Breadcrumb style="--bs-breadcrumb-divider: '>';" Items="NavItems"></Breadcrumb>

<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <table>
                <tr>
                    <td style="width: 100%;">
                        <h2>Shops</h2>
                    </td>
                    <td style="white-space: nowrap;">
                        <button class="btn btn-primary btn-sm" type="button" @onclick="() => New()">New</button>
                    </td>
                </tr>
            </table>
        </div>

        @if (Shops != null)
        {
            <div class="card-body">
                <TableTemplate Data="@Shops" ShowIndex="true">
                    <TableHeader>
                        <th>Name</th>
                        <th style="width: 50px"></th>
                        <th style="width: 30px"></th>
                    </TableHeader>
                    <RowTemplate Context="shop">
                        <td>@shop.Name</td>
                        <td><button class="btn btn-primary btn-sm" type="button" @onclick="() => Update(shop)">Edit</button></td>
                        <td><button class="btn-close btn-sm" type="button" @onclick="() => DeleteAsync(shop)"></button></td>
                    </RowTemplate>
                </TableTemplate>
            </div>
        }
    </div>
</div>

<ConfirmDialog @ref="dialog" />