@page "/productstatistics"

<div class="align-left">
    <div class="card">
        <div class="card-header">
            <div class="row g-0">
                <div class="col-md-8">
                    <h2>Statistics</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            @if (Statistics != null)
            {
                foreach (var item in Statistics)
                {
                    <div class="col-sm">
                        <DoughnutChart @ref="item.Chart" Width="500" Class="mb-5" />
                    </div>
                }
            }
        </div>
    </div>
</div>