@page "/unitsoverview"

<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <div class="row g-0">
                <div class="col-md-11">
                    <h2>Units</h2>
                </div>
                <div class="col-auto align-self-center">
                    <button class="btn btn-primary btn-sm" type="button" @onclick="() => New()">New</button>
                </div>
            </div>
        </div>

        @if (Units != null)
        {
            <div class="card-body">
                <TableTemplate Data="@Units" ShowIndex="true">
                    <TableHeader>
                        <th>Name</th>
                        <th>Unit type</th>
                        <th style="width: 50px"></th>
                        <th style="width: 30px"></th>
                    </TableHeader>
                    <RowTemplate Context="unit">
                        <td>@unit.Name</td>
                        <td>@unit.UnitType.ToString()</td>
                        <td><button class="btn btn-primary btn-sm" type="button" @onclick="() => Update(unit)">Edit</button></td>
                        <td><button class="btn-close btn-sm" type="button" @onclick="() => DeleteAsync(unit)"></button></td>
                    </RowTemplate>
                </TableTemplate>
            </div>
        }
    </div>
</div>

<ConfirmDialog @ref="dialog" />