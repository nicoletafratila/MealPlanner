@page "/identities/userprofile"
@page "/identities/userprofile/{name}"

<Breadcrumb style="--bs-breadcrumb-divider: '>';" Items="_navItems"></Breadcrumb>

@if (ApplicationUser != null)
{
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <table>
                    <tr class="row g-0" style="display:contents">
                        <td class="col-md-8" style="vertical-align: top">
                            <h2 id="headerfirstname">@ApplicationUser.FirstName</h2>
                            <br />
                            <h2 id="headerlastname">@ApplicationUser.LastName</h2>
                        </td>
                        <td class="col-md-3" style="align-content:flex-end;">
                            <img class="img-fluid" src="@ApplicationUser.ProfilePictureUrl" />
                        </td>
                    </tr>
                </table>
            </div>

            <div class="card-body">
                <EditForm Model="@ApplicationUser" OnValidSubmit="@SaveAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label for="username" class="col-sm-3">Username: </label>
                        <InputText disabled id="username" class="form-control" @bind-Value="@ApplicationUser.Username"></InputText>
                        <ValidationMessage For="@(() => ApplicationUser.Username)" />
                    </div>

                    <div class="form-group mt-3">
                        <label for="firstname" class="col-sm-3">First name: </label>
                        <InputText id="firstname" class="form-control" @bind-Value="@ApplicationUser.FirstName" placeholder="First name" oninput="updateHeader()"></InputText>
                        <ValidationMessage For="@(() => ApplicationUser.FirstName)" />
                    </div>

                    <div class="form-group mt-3">
                        <label for="lastname" class="col-sm-3">Last name: </label>
                        <InputText id="lastname" class="form-control" @bind-Value="@ApplicationUser.LastName" placeholder="Last name" oninput="updateHeader()"></InputText>
                        <ValidationMessage For="@(() => ApplicationUser.LastName)" />
                    </div>

                    <div class="form-group mt-3">
                        <label for="phonenumber" class="col-sm-3">Phone number: </label>
                        <InputText id="phonenumber" class="form-control" @bind-Value="@ApplicationUser.PhoneNumber" placeholder="Phone number"></InputText>
                        <ValidationMessage For="@(() => ApplicationUser.PhoneNumber)" />
                    </div>

                    <div class="form-group mt-3">
                        <label for="email" class="col-sm-3">Email: </label>
                        <InputText id="email" class="form-control" @bind-Value="@ApplicationUser.EmailAddress" placeholder="Email"></InputText>
                        <ValidationMessage For="@(() => ApplicationUser.EmailAddress)" />
                    </div>

                    <div class="form-group mt-3">
                        <label for="image" class="col-sm-3">Select image: </label>
                        <InputFile id="image" class="form-control" OnChange="OnInputFileChangeAsync" accept="image/png, image/jpeg, image/gif" />
                        <ValidationMessage For="@(() => ApplicationUser.ProfilePicture)" />
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary btn-sm">Save</button>
                        <button class="btn btn-primary btn-sm" type="button" @onclick="NavigateToOverview">Back to overview</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

<ConfirmDialog @ref="_dialog" />

<script>
    function updateHeader() {
        var inputFirstName = document.getElementById("firstname").value;
        document.getElementById("headerfirstname").innerText = inputFirstName;

         var inputLastName = document.getElementById("lastname").value;
        document.getElementById("headerlastname").innerText = inputLastName;
    }
</script>