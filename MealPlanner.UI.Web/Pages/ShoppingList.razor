@page "/shoppinglist"
@page "/shoppinglist/{id}"

<PageTitle>Shopping list</PageTitle>

<h1 class="page-title">Shopping list details for @Model.Name</h1>

@if (Model.Ingredients == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Ingredients)
            {
                <tr>
                    <td>@item.Ingredient.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Ingredient.Unit</td>
                    <td>@item.Ingredient.IngredientCategory.Name</td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary table-btn" @onclick="@NavigateToOverview">Back to overview</a>
}

