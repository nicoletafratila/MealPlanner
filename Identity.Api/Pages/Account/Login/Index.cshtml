@page
@model Identity.Api.Pages.Account.Login.Index

<div class="login-page">
    <div class="lead">
        <h1 class="text-center">Login</h1>
        <p class="text-center">Choose how to login</p>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account</h2>
                </div>

                <div class="card-body">
                    @if (ViewContext.ViewData.ModelState.ErrorCount > 0)
                    {
                        @Html.ValidationSummary(false, null,  new { @class = "text-danger" })
                    }
                    <form asp-page="/Account/Login/Index">
                        <input type="hidden" asp-for="Input!.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input!.Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Input!.Username" autofocus>
                            <span asp-validation-for="Input!.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input!.Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Input!.Password" autocomplete="off">
                            <span asp-validation-for="Input!.Password" class="text-danger"></span>
                        </div>

                        @if (Model!.View!.AllowRememberLogin)
                        {
                            <div class="form-group">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input!.RememberLogin">
                                    <label class="form-check-label" asp-for="Input!.RememberLogin">
                                        Remember My Login
                                    </label>
                                </div>
                            </div>
                        }

                        <button class="btn btn-primary prm-trivia-color" name="Input.Button" value="login">Login</button>
                        <button class="btn btn-secondary sec-trivia-color" name="Input.Button" value="cancel">Cancel</button>
                        <div>
                            <p class="mt-3">
                                <a asp-page="/Account/Register/Index" asp-route-returnUrl="@Model!.Input!.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                        <div>
                            <p class="mt-3">
                                <a asp-page="/Account/ForgotPassword/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">Forgot password</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>