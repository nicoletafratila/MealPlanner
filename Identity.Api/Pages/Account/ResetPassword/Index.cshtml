@page
@model Identity.API.Pages.Account.ResetPassword.Index

<div class="login-page">
    <div class="lead">
        <h1 class="text-center">Reset your password</h1>
        <p class="text-center">Enter your new password</p>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Reset your password</h2>
                </div>

                <div class="card-body">
                    @if (ViewContext.ViewData.ModelState.ErrorCount > 0)
                    {
                        @Html.ValidationSummary(false, null,  new { @class = "text-danger" })
                    }
                    <form asp-page="/Account/ResetPassword/Index">
                        <input type="hidden" asp-for="Input!.ReturnUrl" />
                        <input type="hidden" asp-for="Input!.Email" class="form-control" />
                        <input type="hidden" asp-for="Input!.Token" class="form-control" />

                        <div class="form-group">
                            <label asp-for="Input!.NewPassword" class="control-label"></label>
                            <input asp-for="Input!.NewPassword" class="form-control" />
                            <span asp-validation-for="Input!.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input!.ConfirmPassword" class="control-label"></label>
                            <input asp-for="Input!.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input!.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button class="btn btn-primary prm-trivia-color" name="Input!.Button" value="reset">Reset</button>
                        <div>
                            <p class="mt-3">
                                Click <a href="@Model!.Input!.ReturnUrl">here</a> to go back to the application.
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
