@page
@model Identity.Api.Pages.Account.ForgotPasswordConfirmation.Index

<div class="login-page">
    <div class="lead">
        <h1 class="text-center">Reset password confirmation</h1>
        <p class="text-center">We have reset your password</p>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Reset password</h2>
                </div>

                <div class="card-body">
                    @if (ViewContext.ViewData.ModelState.ErrorCount > 0)
                    {
                        @Html.ValidationSummary(false, null,  new { @class = "text-danger" })
                    }
                    <p>
                        The link has been sent, please check your email to reset your password.
                    </p>
                    <div>
                        <p class="mt-3">
                            Click <a href="@Model!.Input!.ReturnUrl">here</a> to go back to the application.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
